<!doctype html>
<html lang="en">

<head>
  <title>Title</title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet" />
  <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
  <!-- Bootstrap CSS v5.2.1 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <style>
        main h2{
            text-align: center;
            padding-top: 100px;
        }
    </style>
</head>

<body>
  <header>
    <!-- place navbar here -->
  </header>
  <main>
        <h2>POST BÀI VIẾT</h2>
        <form id="myForm">
            <div class="container">
                <div class="mb-3">
                    <label for="" class="form-label">Tựa bài viết</label>
                    <input type="text"
                      class="form-control" name="title" id="" aria-describedby="helpId" placeholder="">
                  </div>
                <div class="mb-3">
                <label for="" class="form-label">Nội dung bài viết</label>
                <div id="editor"></div>
                </div>
                <div class="mb-3">
                  <label for="" class="form-label">Hình nền bài viết</label>
                  <input type="text"
                    class="form-control" name="image" id="" aria-describedby="helpId" placeholder="">
                </div>
          
                  <div class="mb-3">
                    <label for="" class="form-label">Chọn danh mục</label>
                    <select class="form-select form-select-lg" name="category_id" id="category">
                        <% data.forEach((e) => {%>
                            <option value=<%- e._id %>><%- e.title %></option>
                        <% }) %>
                    </select>
                  </div>
                <button id="submitBtn" class="btn btn-primary">Button</button>
            </div>
        </form>
  </main>
  <footer>
    <!-- place footer here -->
  </footer>
  <script>
    var quill = new Quill("#editor", {
        theme: "snow",
      });


      var form = document.getElementById("myForm");
  var submitBtn = document.getElementById("submitBtn");

  submitBtn.addEventListener("click", function(e) {

    // Get the title input
    var titleInput = document.querySelector('input[name="title"]');
    var imageInput = document.querySelector('input[name="image"]');
    var category_idSelect = document.querySelector('#category');
    var category_id = category_idSelect.value ;
    var title = titleInput.value;
    var image = imageInput.value;
    var editorContent = quill.root.innerHTML;
    axios.post('http://localhost:3000/uploadbaiviet' , {
        title : title ,
        image : image, 
        category_id : category_id ,
        content : editorContent 
    });

  });
       
  </script>
  <!-- Bootstrap JavaScript Libraries -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
    integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
    integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
  </script>
</body>

</html>


